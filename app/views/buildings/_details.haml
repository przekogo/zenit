      = t "buildings.button.spaces"
    .zen-gate__tooltip.transparent{'data-tooltip' => 'gallery'}
      = t "buildings.button.gallery"
    .zen-gate__tooltip.transparent{'data-tooltip' => 'blueprint'}
      = t "buildings.button.blueprint"
