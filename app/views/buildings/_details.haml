    = t "buildings.#{building}.description"
  .zen-gate__actions
    .zen-gate__button.spaces{'data-tooltip' => 'spaces'}
      %span
    .zen-gate__button.gallery{'data-tooltip' => 'gallery'}
      %span
    .zen-gate__button.blueprint{'data-tooltip' => 'blueprint'}
      %span
